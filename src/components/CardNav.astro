---
const currentPath = Astro.url.pathname;
---

<nav class="flex items-center justify-between px-6 py-4">
  <!-- Logo -->
  <a href="/" class="flex items-center">
    <img
      src="/images/logo.png"
      alt="Athlete Connection Sports Group logo"
      class="h-6 md:h-7 w-auto"
    />
    <span class="sr-only">Athlete Connection Sports Group</span>
  </a>

  <!-- Links -->
  <div class="flex gap-4 md:gap-6 text-sm md:text-base text-muted">
    <a
    href="/"
    class={`transition ${
      currentPath === "/"
        ? "text-white font-medium"
        : "text-muted hover:text-white"
    }`}
  >
    Home
  </a>

    <a
    href="/services"
    class={`transition ${
      currentPath === "/services"
        ? "text-white font-medium"
        : "text-muted hover:text-white"
    }`}
  >
    Services
  </a>
     <a
    href="/athletes"
    class={`transition ${
      currentPath === "/athletes"
        ? "text-white font-medium"
        : "text-muted hover:text-white"
    }`}
  >
    Athletes
  </a>
     <a
    href="/contact"
    class={`transition ${
      currentPath === "/contact"
        ? "text-white font-medium"
        : "text-muted hover:text-white"
    }`}
  >
    Contact
  </a>
  </div>
</nav>
