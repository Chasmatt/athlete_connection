---
import "../styles/global.css";

const { title = "Athlete Connection Sports Group" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>

  <body class="min-h-screen relative overflow-hidden text-white">
  	
  <!-- Background image -->
  <div
    class="fixed inset-0 bg-cover bg-center scale-105"
    style="background-image: url('/images/hero.jpg');"
  ></div>

  <!-- Dark overlay -->
  <div class="fixed inset-0 bg-black/70 backdrop-blur-sm"></div>

  <!-- Page content -->
  <main class="relative z-10 min-h-screen flex items-center justify-center px-4">
  <div
    class="
      w-full
      max-w-md
      md:max-w-3xl
      lg:max-w-5xl
      xl:max-w-6xl
    "
  >
    <slot />
  </div>
</main>


</body>

</html>
