---
import BaseLayout from "../layouts/BaseLayout.astro";
import FloatingCard from "../components/FloatingCard.astro";
import CardNav from "../components/CardNav.astro";
---

<BaseLayout>
  <FloatingCard>
    <div class="flex flex-col h-full">

      <CardNav />

      <div class="flex-1 flex flex-col justify-center items-center px-6 text-center">
        <h1 class="text-2xl md:text-3xl font-semibold mb-4">
          Thank You
        </h1>

        <p class="text-sm md:text-base text-white/70 max-w-md">
          Your message has been sent successfully.  
          An Associate of Athlete Connection Sports Group will be in touch.
        </p>
      </div>

    </div>
  </FloatingCard>
</BaseLayout>
