---
import BaseLayout from "../layouts/BaseLayout.astro";
import FloatingCard from "../components/FloatingCard.astro";
import CardNav from "../components/CardNav.astro";
import ServiceCard from "../components/ServiceCard.astro";

---

<BaseLayout>
  <FloatingCard>
    <div class="flex flex-col h-full">

      <!-- NAV INSIDE CARD -->
      <CardNav />

      <!-- PAGE HEADER -->
      <div class="px-6 py-12 md:py-16 text-center">
       <h1 class="text-2xl sm:text-3xl md:text-4xl font-semibold tracking-wide mb-4">
	Our Focus Is You.
        </h1> 
 <h2 class="text-sm md:text-base text-white/95 mb-4">
    We Offer Guidance for Every Stage of Your Basketball Career.
  </h2>

  <p class="text-xs sm:text-sm md:text-[14px] text-white/70 leading-snug md:leading-relaxed">
    Athlete Connection Sports Group works with basketball players at every stage of their career,
    from high school athletes beginning the recruiting process, to college players navigating
    scholarship opportunities and transfer decisions, to professional athletes competing in the
    United States and overseas. Our services are designed to meet the unique needs of each athlete
    level, providing personalized guidance, strategic planning, and trusted representation to help
    players maximize their opportunities both on and off the court.
  </p>
</div>
        <!-- SERVICES GRID -->

<div
  class="
    px-6 pb-12
    grid
    grid-cols-1
    gap-6
    md:gap-8
    lg:grid-cols-6
    lg:gap-6
  "
>
  <!-- Top row (2 cards) -->
  <div class=" text-black lg:col-span-3">
    <ServiceCard
      title="Athlete Management"
      description="Contract negotiation, overseas placement, housing coordination, and financial planning."
    />
  </div>

  <div class=" text-black lg:col-span-3">
    <ServiceCard
      title="Consulting Services"
      description="Career consultation, contract review, league and agent matching, and post-career planning."
    />
  </div>

  <!-- Bottom row (3 cards) -->
  <div class=" text-black lg:col-span-2">
    <ServiceCard
      title="Brand & Marketing Development"
      description="Social media strategy, logo creation, sponsorship outreach, and PR & media training."
    />
  </div>

  <div class=" text-black lg:col-span-2">
    <ServiceCard
      title="Team & Agent Partnerships"
      description="Scouting, vetting, highlight and resume creation, and player referrals."
    />
  </div>

  <div class="text-black lg:col-span-2">
    <ServiceCard
      title="Events & Exposure"
      description="Showcases, combines, training camps, and sponsorship events."
    />
  </div>
</div>

  </FloatingCard>
</BaseLayout>
